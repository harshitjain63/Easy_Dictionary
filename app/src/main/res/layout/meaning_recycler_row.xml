<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_corner"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="noun"
        android:textStyle="bold"
        android:id="@+id/part_of_speech"
        android:textSize="20sp"
        android:textColor="@color/primary"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Definitions :"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="1 definition \n\n 2 another \n\n 3 third"
        android:id="@+id/definitions"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synonyms :"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:id="@+id/synonyms_titles"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="asad, asaad, asdia, adsd"
        android:textColor="@color/black"
        android:id="@+id/synonyms"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Antonyms :"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:id="@+id/antonyms_titles"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="asad, asaad, asdia, adsd"
        android:id="@+id/antonyms"
        />


</LinearLayout>